{% extends "admin/layout.njk" %}

{% block links %}
<a href="/admin/recipes">Receitas</a>
<a class="active" href="/admin/chefs">Chefs</a>
{% endblock links %}

{% block content %}
        
<div id="wrapper">
    <div class="container-chefs admin">
        <div class="chef-header">
            <h2>Gerenciar chefs</h2>
            <a href="/admin/chefs/create">Novo chef</a>
        </div>
        <div class="chefs-index">
            <section class="chefs admin">
                {% for chef in chefs %}
                <div id="{{chef.id}}"class="chef">
                    <div class="container-image">
                        <span style="background-image: url({{chef.avatar_url}})"></span>
                    </div>
                    <div>
                        <div>{{chef.name}}</div>
                        <a class="button" href="/admin/chefs/{{ chef.id }}">Visualizar</a>
                    </div>
                </div>
                {% endfor %}
            </section>
        </div>
    </div>
</div>

{% endblock content %}

{% block scripts %}
<script src="scripts.js"></script>
{% endblock scripts %}
