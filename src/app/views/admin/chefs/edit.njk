{% extends "layouts/admin.njk" %}

{% block head %}
    <title>Foodfy - Editar chef</title>
{% endblock head %}

{% block content %}
<form id="form-save" action="/admin/chefs?_method=PUT" method="POST">
    <div class="chef-header">
        <h2>Editando chef</h2>
        <div>
            <button form="form-delete" type="submit">Deletar</button>
            <button form="form-save" type="submit">Salvar chef</button>
        </div>
    </div>

    {% include "admin/chefs/fields.njk" %}

    <input type="hidden" name="id" value="{{ chef.id }}">
    
</form>
<form id="form-delete" action="/admin/chefs?_method=DELETE" method="POST">
    <input type="hidden" name="id" value="{{ chef.id }}">
</form>

{% endblock content %}